<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/auth_navigation"
    app:startDestination="@id/loginView">

    <fragment
        android:id="@+id/loginView"
        android:name="com.joker.lpgo.mobile.module.login.LoginView"
        android:label="LoginView" >
        <action
            android:id="@+id/action_loginView_to_forgotView"
            app:destination="@id/forgotView" />
        <action
            android:id="@+id/action_loginView_to_registerView"
            app:destination="@id/registerView" />
    </fragment>
    <fragment
        android:id="@+id/forgotView"
        android:name="com.joker.lpgo.mobile.module.forgot.ForgotView"
        android:label="ForgotView" />
    <fragment
        android:id="@+id/registerView"
        android:name="com.joker.lpgo.mobile.module.register.RegisterView"
        android:label="RegisterView" />
</navigation>