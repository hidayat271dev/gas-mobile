<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LPGO" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBackground">
        <item name="backgroundColor">@color/transparant</item>
    </style>

    <style name="AnimationFade" >
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="AppFullDialogTheme" parent="Theme.LPGO">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppBottomDialog" parent="BottomDialogTheme">
        <item name="bottom_sheet_extra_padding">0dp</item>
        <item name="bottom_sheet_corner_radius">16dp</item>
        <item name="should_draw_content_under_handle_view">true</item>
    </style>

    <!--  START EDITTEXT STYLE  -->
    <style name="EditTextDefault">
        <item name="edt_padding_bottom">8dp</item>
        <item name="edt_padding_end">8dp</item>
        <item name="edt_padding_start">8dp</item>
        <item name="edt_padding_top">8dp</item>
        <item name="edt_background">@drawable/bg_editbox_second_rounded</item>
        <item name="edt_background_focus">@drawable/bg_editbox_active_rounded</item>
        <item name="edt_text_color">@color/primaryText</item>
        <item name="edt_text_hint_color">@color/hintText</item>
        <item name="edt_toggle_text_color">@color/primary</item>
        <item name="edt_text_size">12sp</item>
    </style>

    <style name="EditTextSearch">
        <item name="edt_padding_bottom">8dp</item>
        <item name="edt_padding_end">16dp</item>
        <item name="edt_padding_start">8dp</item>
        <item name="edt_padding_top">8dp</item>
        <item name="edt_background_text">@drawable/bg_editbox_circle</item>
        <item name="edt_background">@drawable/bg_editbox_circle</item>
        <item name="edt_show_clear">true</item>
        <item name="edt_hint">@string/hint_search</item>
        <item name="edt_text_size">12sp</item>
        <item name="edt_text_color">@color/primaryText</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
    </style>
    <!--  END EDITTEXT STYLE  -->

    <!--  START BUTTON STYLE  -->
    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppButtonPrimary" parent="AppButton">
        <item name="android:backgroundTint">@color/buttonPrimary</item>
    </style>

    <style name="AppBorderRounded" parent="AppButton">
        <item name="android:background">@drawable/bg_button_border_rounded</item>
        <item name="android:textColor">@color/primary</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--  END BUTTON STYLE  -->

    <!--  START TEXT STYLE  -->
    <style name="PoppinsRegular8" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">8sp</item>
    </style>
    <style name="PoppinsRegular10" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="PoppinsSemiBold12" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="PoppinsSemiBold10" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="PoppinsSemiBold8" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="PoppinsMedium10" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="PoppinsMedium8" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="PoppinsLight8" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">8sp</item>
    </style>
    <!--  END TEXT STYLE  -->

</resources>