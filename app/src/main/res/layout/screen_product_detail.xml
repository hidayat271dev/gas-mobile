<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:cardBackgroundColor="#D8D8D8"
                app:cardCornerRadius="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView26"
                    style="@style/PoppinsSemiBold10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product Name - Shop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include
                        layout="@layout/component_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <include
                        layout="@layout/component_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView27"
                    style="@style/PoppinsRegular8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lorem ipsum dolor sit amet, pro tollit feugait constituam inLorem ipsum dolor sit amet, pro tollit feugait â€¦" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/dotted"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView28"
            style="@style/PoppinsSemiBold10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="Qty to Order" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                style="@style/AppBorderRounded"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="16dp"
                android:text="-" />

            <androidx.cardview.widget.CardView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                app:cardCornerRadius="5dp">

                <com.joker.lpgo.utils.widget.edittext.AppEditTextView
                    android:id="@+id/qty"
                    style="@style/EditTextDefault"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:imeOptions="actionDone"
                    android:inputType="text|number"
                    app:edt_show_clear="false"
                    app:edt_padding="16dp" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/button6"
                style="@style/AppButtonPrimary"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="16dp"
                android:text="+" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button7"
        style="@style/AppButtonPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Add to Cart" />

</LinearLayout>